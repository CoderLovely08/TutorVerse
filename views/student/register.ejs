<%- include('../partials/header') %>

<main class="flex justify-center items-center w-full h-fit">
  <div class="w-1/2 max-md:w-full m-4 bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-6">Student Registration</h2>
    <form action="/student/register" method="POST">
      <div class="flex max-md:flex-col justify-between items-center gap-2">
        <div class="mb-4 w-full">
          <label for="fullName" class="block text-gray-700 font-semibold mb-2"
            >Full Name</label
          >
          <input
            type="text"
            id="fullName"
            name="fullName"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            placeholder="Enter your full name"
            required
          />
        </div>
        <div class="mb-4 w-full">
          <label
            for="contactNumber"
            class="block text-gray-700 font-semibold mb-2"
            >Contact Number</label
          >
          <input
            type="tel"
            id="contactNumber"
            name="contactNumber"
            pattern="[0-9]{10}"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            placeholder="Enter your contact number (10 digits)"
            required
          />
        </div>
      </div>
      <div class="flex max-md:flex-col justify-between items-center gap-2">
        <div class="mb-4 w-full">
          <label for="email" class="block text-gray-700 font-semibold mb-2"
            >Email</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            placeholder="Enter your email"
            required
          />
        </div>
        <div class="mb-4 w-full">
          <label for="password" class="block text-gray-700 font-semibold mb-2"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            placeholder="Enter your password"
            required
          />
        </div>
      </div>
      <div class="flex max-md:flex-col justify-between items-center gap-2">
        <div class="mb-4 w-full">
          <label for="dob" class="block text-gray-700 font-semibold mb-2"
            >Date of Birth</label
          >
          <input
            type="date"
            id="dob"
            name="dob"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            required
          />
        </div>
        <div class="mb-4 w-full">
          <label for="course" class="block text-gray-700 font-semibold mb-2"
            >Course</label
          >
          <select
            id="course"
            name="course"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            required
          >
            <option value="" disabled selected hidden>
              Select your course
            </option>

            <% for( let i = 0; i < dropdownOptions.courseData.data.length; i++ )
            { %>
            <option value="<%= dropdownOptions.courseData.data[i].course_id %>">
              <%= dropdownOptions.courseData.data[i].course_name %>
            </option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="flex max-md:flex-col justify-between items-center gap-2">
        <div class="mb-4 w-full">
          <label for="branch" class="block text-gray-700 font-semibold mb-2"
            >Branch</label
          >
          <select
            id="branch"
            name="branch"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            required
          >
            <option value="" disabled selected hidden>Select your branch</option>
            <!-- Add options for branches -->
            <% for( let i=0; i < dropdownOptions.branchData.data.length; i++ )
            { %>
            <option
              value="<%= dropdownOptions.branchData.data[i].branch_id %>"
            >
              <%= dropdownOptions.branchData.data[i].branch_name %>
            </option>
            <% } %>
          </select>
        </div>
        <div class="mb-4 w-full">
          <label for="semester" class="block text-gray-700 font-semibold mb-2"
            >Semester</label
          >
          <select
            id="semester"
            name="semester"
            class="border border-gray-300 rounded-md px-3 py-2 w-full focus:outline-none focus:border-black"
            required
          >
            <option value="" disabled selected hidden>
              Select your semester
            </option>
            <!-- Add options for semesters -->
            <% for( let i=0; i < dropdownOptions.semesterData.data.length; i++ )
            { %>
            <option
              value="<%= dropdownOptions.semesterData.data[i].semester_id %>"
            >
              <%= dropdownOptions.semesterData.data[i].semester_name %>
            </option>
            <% } %>
          </select>
        </div>
      </div>
      <button
        type="submit"
        class="bg-black text-white font-semibold py-2 px-4 rounded-md w-full hover:bg-black focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2"
      >
        Register
      </button>
    </form>
    <p class="text-gray-600 text-center mt-4">
      Already have an account?
      <a
        href="/student/login"
        class="text-black hover:text-black font-bold underline"
        >Login</a
      >
    </p>
  </div>
</main>

<%- include('../partials/footer') %>
