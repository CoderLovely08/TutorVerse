  <body class="bg-gray-100">
    <header class="bg-white shadow-lg">
      <nav class="flex justify-between items-center px-4 py-2">
        <!-- Logo -->
        <a href="/">
          <div class="border-4 px-2 py-1 border-black shadow-md rounded-md">
            <h1 class="text-2xl font-bold">
              TUTOR
              <span class="bg-black text-white px-2 rounded-md">VERSE</span>
