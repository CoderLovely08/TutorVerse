  <body class="bg-gray-100">
    <header class="bg-white shadow-lg">
      <nav class="flex justify-between items-center px-4 py-2">
        <!-- Logo -->
        <a href="/">
          <div class="border-4 px-2 py-1 max-sm:px-1 max-sm:py-1 border-black shadow-md rounded-md">
            <h1 class="text-2xl max-sm:text-lg font-bold">
              TUTOR
              <span class="bg-black text-white px-2 max-sm:px-1 rounded-md">VERSE</span>
            </h1>
          </div>
        </a>
        <!-- Action buttons -->

        <div class="flex gap-2">
          <a href="/faculty/login">
              <button
                class="font-bold px-4 py-2 rounded-md shadow-md border border-black text-xl max-md:text-lg bg-black text-white transition-all hover:bg-white hover:text-black"
              >
                <i class="las la-user-lock mr-2"></i>Faculty
